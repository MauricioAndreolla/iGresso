<% include ('../viewUtils') %> 
<% if (!!locals.movie_list) { %>
    <% for (let index = 0; index < movie_list.length; index++) {
         const movie = movie_list[index];
         var poster_image = "";
         var poster_image_src = "";
        try {
            
         poster_image = movie.Images.find(s=> s.tipo_imagem == 2).diretorio;
         poster_image_src = `/src/public/images/${movie.id}${poster_image}`;
        } catch (error) {
            
        }
     

        var rating = getRatingClass(movie.classificacao);
    %>
    <div class="col-lg-2 col-md-3 col-6">
        <div class="card-movie" data-id="<%= movie.id %> ">
            <img src="<%=poster_image_src%>" alt="">
            <div class="card-movie-info">
                <div class="movie-rating pg-sm rating-pull-right <%= rating %> ">
                    <%= movie.classificacao %>
                </div>
            </div>
            <div class="card-movie-stars">
                <%- getRatingStars(getAVGReview(movie.Reviews)) %>
            </div>
            <div class="card-movie-title">
                <%= movie.nome %>
            </div>
        
        </div>
    </div>
    <% } %>

<% } %>